.wrapper {
  color: #333;
  width: 100%;
  height: 100%;
  max-width: 640px;
}

// 头部
.header {
  margin-bottom: 8px;
  background: #fff;
  overflow: hidden;

  .header-bg {
    display: block;
    margin: 0 auto;
    width: 100%;
    height: 240px;
  }

  .header-content {
    padding: 10px;

    .content-source {
      display: flex;
      align-items: center;
      margin-bottom: 8px;

      .label {
        border-radius: 2px;
        color: #fff;
        background: #c8161d;
        margin-right: 8px;
        font-size: 10px;
        line-height: 14px;
        min-width: 40px;
        padding: 2px 4px;
      }

      .date {
        color: #999;
        font-size: 12px;
      }
    }

    .content-title {
      color: #333;
      font-weight: 700;
      font-size: 1.125rem;
      // text-align: justify;
      line-height: 25px;
      margin-bottom: 9px;

      span {
        color: #333;
        font-weight: 700;
        font-size: 18px;
      }
    }

    .content-desc {
      margin-bottom: 8px;  

      p {
        color: #c8161d;
        font-size: 16px;
      }
    }
  }
}

// 活动爆料
.activity-desc {
  background: #fff;
  margin-bottom: 8px;
  box-sizing: border-box;
  min-height: 230px;
}

// 相关商品
.related-products {
  background: #fff;
  margin-top: 10px;
  padding: .2rem;
  
  h3 {
    font-size: 18px;
    font-weight: bold;
  }

  .products-list {
    margin-top: .5rem;

    ul li a{
      display: flex;
      margin-bottom: 10px;
      
      .left {
        width: 3rem;
        height: 3rem;
        overflow: hidden;
        
        img {
          width: 100%;
          height: 100%;
          border-radius: 3px;
        }
      }

      .right {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        flex: 1;
        padding-left: .25rem;
        font-size: 15px;

        .product-title {
          overflow : hidden;
          text-overflow: ellipsis;
          display: -webkit-box;
          -webkit-line-clamp: 2;
          -webkit-box-orient: vertical;
          font-weight: 800;
          font-size: 15px;
          margin-bottom: .1rem;
          line-height:1.4em;
        }

        .bottom {
          display: flex;
          justify-content: space-between;
          align-items: center;

          .price {
            font-size: .4rem;
            line-height: .6rem;
            font-weight: 700;
            color: #e93b3d;
          }

          .btn {
            width: 1.5rem;
            height: .6rem;
            background: linear-gradient(90deg,#e93b3d,#d72b2d);
            box-shadow: 0 2px 6px 0 rgba(229,63,66,.5);
            border-radius: .5rem;
            color: #fff;
            line-height: .6rem;
            text-align: center;           
          }
        }
      }
    }
  }
}

// 弹框
.modal {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .6);
  z-index: 99;
  transition: opacity .4s ease;

  .modal-content {
    position: relative;
    width: 6rem;
    height: 6.5rem;
    top: 50%;
    margin-top: -3.5rem;
    left: 50%;
    margin-left: -3rem;
    background: #fff;
    border-radius: 5px;
    padding-top: 1.2rem;
    box-sizing: border-box;

    h2 {
      font-size: .4rem;
      color: #333;
      line-height: .4rem;
      text-align: center;
      font-weight: 800;
    }

    .password {
      width: 3rem;
      font-size: .35rem;
      color: #e0ca8b;
      line-height: .4rem;
      text-align: left;
      margin: .3rem auto;
      padding: .3rem 1rem;
      background: #f5f8fb;
    }

    .tip {
      background: linear-gradient(90deg, #f2cc82, #c3a363)
      margin: 0 .3rem .3rem;
      border-radius: 5px;
      font-size: .4rem;
      color: #fff;
      text-align: center;
      padding: .3rem;
    }

    .url {
      font-size: .4rem;
      border: 1px solid #e0d5b2;
      border-radius: 5px;
      padding: .3rem;
      background: #fff;
      color: #e0d5b2;
      margin:0 .3rem .3rem;
      box-sizing: border-box;
      text-align: center;
    }

    .bottom-desc {
      text-align: center;
      font-size: .2rem;
      color: #d6d6d6;
    }

    // 关闭弹框按钮
    .modal-content--btn {
      position: absolute;
      top: .24rem;
      right: .24rem;
      width: .48rem;
      height: .48rem;
      border-radius: 50%;
      border: 1px solid #666;
      transform: rotate(45deg);

      &:before {
        content: "";
        position: absolute;
        width: .02rem;
        height: .3rem;
        background: #666;
        top: .1rem;
        left: .24rem;
      }

      &:after {
        content: "";
        position: absolute;
        width: .3rem;
        height: .02rem;
        background: #666;
        top: .24rem;
        left: .1rem;
      }
    }
  }
}

.dialog-modal {
  display: none;
}

// action-sheet
.action-sheet {
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
  background: #fff;
  width: 100%;
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
  transition: transform .3s ease;
  -webkit-backface-visibility:hidden; /* 防止闪烁 */
  backface-visibility:hidden; /* 防止闪烁 */
  transform: translate3d(0, 100%, 0)
  z-index: 999;

  .action-sheet--controller{
    margin: 0 auto;
    width: 1rem;
    height: .1rem;
    background: #ccc;
    border-radius: 8px;
    margin-top: .2rem;
  }
  
  .action-sheet--options {
    max-height: 300px;
    overflow: scroll;
    padding: .3rem .2rem;

    ul li {
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-size: .3rem;
      padding: .3rem 0 .3rem .2rem;
      
      .title {
        font-size: .25rem;
        max-width: 155px;
        color: #898989;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        line-height: 22px;
      }

      .btn {
        padding: .15rem .3rem;
        text-align: center;
        color: #fff;
        background: #f45551;
      }
    }
  }
}

.action-sheet-modal {
  display: none;
}

.up {
  transform: translate3d(0, 0, 0);
}

// 富文本返回内容相关样式
.rich-text-editor {
  padding:10px;

  .commodityCard {
    min-height: 180px;

    .rightCard-describe {
      overflow : hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
    }
  }
}
